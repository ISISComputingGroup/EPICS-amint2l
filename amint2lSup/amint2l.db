record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
}

record(bo, "$(P)DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

#
# Main database file
#
# Macros:
#    P - prefix for ioc PVs
#    PORT - name of the asyn stream port to use
#    RECSIM - rec sim mode
#    DISABLE - disable communications
#    ADDR - 2 character internal address of the device

record(ai, "$(P)PRESSURE")
{
	field(DESC, "Pressure readback")
    field(EGU, "bar")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP, "@amint2l.proto getPressure($(ADDR),$(P)RAW_ERROR) $(PORT)")
    field(PREC, 3)
    field(FLNK, "$(P)RANGE:ERROR_CALC")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:PRESSURE")
    field(SDIS, "$(P)DISABLE")
}

record(mbbi, "$(P)RAW_ERROR")
{
	field(DESC, "Error in pressure readback")
    field(SCAN, "Passive")
    field(ZRST, "Under Range")
    field(ONST, "Over Range")
    field(PINI, "YES")
    field(VAL, 0)
}

record(calcout, "$(P)RANGE:ERROR_CALC") 
{    
    field(DESC, "Forward error if there is an error")
    field(INPA, "$(P)PRESSURE.STAT")
    field(INPB, "$(P)RAW_ERROR")
    field(CALC, "A==0?2:B")
    field(OUT, "$(P)RANGE:ERROR PP")
}

record(mbbi, "$(P)RANGE:ERROR")
{
	field(DESC, "Error in pressure readback")
    field(EGU, "")
    field(SCAN, "Passive")
    field(ZRST, "Under Range")
    field(ZRSV, "MAJOR")
    field(ONST, "Over Range")
    field(ONSV, "MAJOR")
    field(TWST, "No Error")
    
    info(INTEREST, "MEDIUM")
    info(archive, "VAL")
}

### SIMULATION RECORDS ###

record(ai, "$(P)SIM:PRESSURE")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
}
