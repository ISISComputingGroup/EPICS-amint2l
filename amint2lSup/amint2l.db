#
# Main database file
#
# Macros:
#    P - prefix for ioc PVs
#    PORT - name of the asyn stream port to use
#    ADDR - 2 character internal address of the device


record(ai, "$(P)PRESSURE")
{
	field(DESC, "Pressure readback")
    field(EGU, "bar")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP, "@amint2l.proto getPressure($(ADDR),$(P)RAW_ERROR) $(PORT)")
    field(FLNK, "$(P)RANGE:ERROR_CALC")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
}

record(mbbi, "$(P)RAW_ERROR")
{
	field(DESC, "Error in pressure readback")
    field(SCAN, "Passive")
    field(ZRST, "Under Range")
    field(ONST, "Over Range")
}

record(calcout, "$(P)RANGE:ERROR_CALC") 
{    
    field(DESC, "Forward error if there is an error")
    field(INPA, "$(P)PRESSURE.STAT")
    field(INPB, "$(P)RAW_ERROR")
    field(CALC, "A==0?2:B")
    field(OUT, "$(P)RANGE:ERROR PP")
}

record(mbbi, "$(P)RANGE:ERROR")
{
	field(DESC, "Error in pressure readback")
    field(EGU, "")
    field(SCAN, "Passive")
    field(ZRST, "Under Range")
    field(ONST, "Over Range")
    field(TWST, "No Error")
    info(INTEREST, "MEDIUM")
    info(archive, "VAL")
}
